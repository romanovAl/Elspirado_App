<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="sublimePickerStyle">@style/MySublimePickerStyle</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_gravity">center</item>
         <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="PurpleButton">
        <item name="android:colorBackground">#1a237e</item>
        <item name="android:colorPrimary">#673ab7</item>
    </style>

    <style name="MySublimePickerStyle" parent="SublimePickerStyleLight">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="niceTextEditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorPrimary</item>
    </style>

    <style name="MyCounterText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

</resources>